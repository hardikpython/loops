# Function to calculate powers of a number from 1 to n using a for loop
def calculate_powers(base, n):
    # Loop from 1 to n (inclusive)
    for i in range(1, n+1):
        result = base ** i  # Calculate base raised to the power i
        print(f"{base} raised to the power {i} is: {result}")

